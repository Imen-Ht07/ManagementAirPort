@model GestionAirPort.Models.Traveller

@{
    ViewData["Title"] = "Nouveau Voyageur";
    var currentUser = "Imen-Ht07";
}

<div class="container-fluid">
    <!-- User Info Bar -->
    <div class="user-info-bar mb-4 p-3 bg-white shadow-sm rounded">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-user-circle me-2 text-primary"></i>
                <span class="fw-bold text-primary">@currentUser</span>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-success text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="card-title mb-0">
                    <i class="fas fa-suitcase-rolling me-2"></i>Nouveau Voyageur
                </h3>
                <span class="badge bg-light text-success">
                    <i class="fas fa-info-circle me-1"></i>Formulaire d'inscription
                </span>
            </div>
        </div>

        <form asp-action="Create" id="createTravellerForm">
            <div class="card-body py-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-4">
                    <!-- Informations Personnelles -->
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm hover-card">
                            <div class="card-header bg-white">
                                <h5 class="mb-0 text-success">
                                    <i class="fas fa-id-card me-2"></i>Informations Personnelles
                                </h5>
                            </div>
                            <div class="card-body text-dark">
                                <!-- Passport Number -->
                                <div class="mb-3">
                                    <label asp-for="PassportNumber" class="form-label required">Numéro de Passeport</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-passport"></i>
                                        </span>
                                        <input asp-for="PassportNumber" class="form-control" placeholder="Ex: TN123456" />
                                    </div>
                                    <span asp-validation-for="PassportNumber" class="text-danger"></span>
                                </div>

                                <!-- Nationality -->
                                <div class="mb-3">
                                    <label asp-for="Nationality" class="form-label required">Nationalité</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-globe"></i>
                                        </span>
                                        <select asp-for="Nationality" class="form-select">
                                            <option value="Tunisienne">Tunisienne</option>
                                            <option value="Française">Française</option>
                                            <option value="Allemande">Allemande</option>
                                            <option value="Italienne">Italienne</option>
                                            <option value="Espagnole">Espagnole</option>
                                            <option value="Autre">Autre</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="Nationality" class="text-danger"></span>
                                </div>

                                <!-- Full Name -->
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="FullName.FirstName" class="form-label required">Prénom</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </span>
                                            <input asp-for="FullName.FirstName" class="form-control" placeholder="Prénom" />
                                        </div>
                                        <span asp-validation-for="FullName.FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="FullName.LastName" class="form-label required">Nom</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </span>
                                            <input asp-for="FullName.LastName" class="form-control" placeholder="Nom" />
                                        </div>
                                        <span asp-validation-for="FullName.LastName" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Birth Date -->
                                <div class="mb-3">
                                    <label asp-for="BirthDate" class="form-label required">Date de Naissance</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-calendar"></i>
                                        </span>
                                        <input asp-for="BirthDate" class="form-control" type="date" />
                                    </div>
                                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contact et Santé -->
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm hover-card">
                            <div class="card-header bg-white">
                                <h5 class="mb-0 text-success">
                                    <i class="fas fa-address-book me-2"></i>Contact et Santé
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- Phone -->
                                <div class="mb-3">
                                    <label asp-for="TelNumber" class="form-label required">Téléphone</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-phone"></i>
                                        </span>
                                        <input asp-for="TelNumber" class="form-control" placeholder="+216 12 345 678" />

                                    </div>
                                    <span asp-validation-for="TelNumber" class="text-danger"></span>
                                </div>

                                <!-- Email -->
                                <div class="mb-3">
                                    <label asp-for="EmailAddress" class="form-label required">Email</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-envelope"></i>
                                        </span>
                                        <input asp-for="EmailAddress" class="form-control" placeholder="exemple@email.com" />
                                    </div>
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>

                                <!-- Health Information -->
                                <div class="mb-3">
                                    <label asp-for="HealthInformation" class="form-label required">Informations de Santé</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-heartbeat"></i>
                                        </span>
                                        <textarea asp-for="HealthInformation" class="form-control" rows="3"
                                                  placeholder="Allergies, conditions médicales, etc."></textarea>
                                    </div>
                                    <span asp-validation-for="HealthInformation" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                    </div>
                    <small class="text-muted">
                        <i class="fas fa-user-plus me-2"></i>
                        Session: @currentUser
                    </small>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
        }

    .form-label {
        font-weight: 500;
        color: #495057;
    }

        .form-label.required::after {
            content: " *";
            color: #dc3545;
        }

    .input-group-text {
        background-color: #198754;
        color: white;
        border: none;
    }

    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.2rem rgba(25,135,84,0.25);
    }

    .btn {
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        transition: all 0.2s;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {

            // Ajout de la méthode personnalisée pour regex
            $.validator.addMethod("regex", function (value, element, regexp) {
                var re = new RegExp(regexp);
                return this.optional(element) || re.test(value);
            }, "Format invalide");

            // Validation personnalisée
            $("#createTravellerForm").validate({
                rules: {
                    "PassportNumber": {
                        required: true,
                        minlength: 8,
                        maxlength: 8
                    },
                    "TelNumber": {
                        required: true,
                        regex: /^\+?[0-9\s\-()]{7,20}$/
                    },
                    "EmailAddress": {
                        required: true,
                        email: true
                    },
                    "HealthInformation": {
                        required: true,
                        minlength: 10
                    }
                },
                messages: {
                    "PassportNumber": {
                        required: "Le numéro de passeport est obligatoire",
                        minlength: "Le numéro de passeport doit contenir 8 caractères",
                        maxlength: "Le numéro de passeport doit contenir 8 caractères"
                    },
                    "TelNumber": {
                        required: "Le numéro de téléphone est obligatoire",
                        regex: "Entrez un numéro de téléphone valide avec indicatif (+216...), espaces ou tirets autorisés"
                    },
                    "EmailAddress": {
                        required: "L'adresse email est obligatoire",
                        email: "Format d'email invalide"
                    },
                    "HealthInformation": {
                        required: "Les informations de santé sont obligatoires",
                        minlength: "Veuillez fournir plus de détails (minimum 10 caractères)"
                    }
                }
            });
        });
    </script>

}