@model GestionAirPort.Models.Plane

@{
    ViewData["Title"] = "Supprimer l'Avion";
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-exclamation-triangle"></i> Confirmer la Suppression
            </h3>
        </div>
        <div class="card-body">
            @if (Model.Flights != null && Model.Flights.Any())
            {
                <div class="alert alert-danger">
                    <h4 class="alert-heading">Attention!</h4>
                    <p>Cet avion ne peut pas être supprimé car il a @Model.Flights.Count vol(s) associé(s).</p>
                    <p>Veuillez d'abord supprimer ou réaffecter ces vols.</p>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <h4 class="alert-heading">Confirmation requise</h4>
                    <p>Êtes-vous sûr de vouloir supprimer cet avion ? Cette action est irréversible.</p>
                </div>
            }

            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0 text-dark">Détails de l'Avion</h5>
                </div>
                <div class="card-body text-dark">
                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.PlaneId</dd>

                        <dt class="col-sm-3">Type</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.PlaneType</span>
                        </dd>

                        <dt class="col-sm-3">Capacité</dt>
                        <dd class="col-sm-9">@Model.Capacity places</dd>

                        <dt class="col-sm-3">Date de Fabrication</dt>
                        <dd class="col-sm-9">@Model.ManufactureDate.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="PlaneId" />
                @if (Model.Flights == null || !Model.Flights.Any())
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Confirmer la suppression
                    </button>
                }
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </form>
        </div>
    </div>
</div>