@model GestionAirPort.Models.Passenger

@{
    ViewData["Title"] = "Modifier le Passager";
   
}

<div class="container-fluid">
    <div class="card shadow text-dark">
        <div class="card-header bg-warning text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="card-title mb-0">
                    <i class="fas fa-user-edit me-2"></i>
                    Modifier le Passager
                    <span class="badge bg-light text-warning ms-2">@Model.PassportNumber</span>
                </h3>
                <span class="badge bg-light text-warning">
                    <i class="fas fa-history me-1"></i>Dernière modification
                </span>
            </div>
        </div>

        <form asp-action="Edit" id="editPassengerForm">
            <div class="card-body py-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="PassportNumber" />

                <div class="row g-4">
                    <!-- Informations Personnelles -->
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm hover-card">
                            <div class="card-header bg-white">
                                <h5 class="mb-0 text-warning">
                                    <i class="fas fa-id-card me-2"></i>Informations Personnelles
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- Passport Display -->
                                <div class="alert alert-warning mb-3">
                                    <i class="fas fa-passport me-2"></i>
                                    Numéro de Passeport: <strong>@Model.PassportNumber</strong>
                                </div>

                                <!-- Full Name -->
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="FullName.FirstName" class="form-label required">Prénom</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </span>
                                            <input asp-for="FullName.FirstName" class="form-control" />
                                        </div>
                                        <span asp-validation-for="FullName.FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="FullName.LastName" class="form-label required">Nom</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </span>
                                            <input asp-for="FullName.LastName" class="form-control" />
                                        </div>
                                        <span asp-validation-for="FullName.LastName" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Birth Date -->
                                <div class="mb-3">
                                    <label asp-for="BirthDate" class="form-label required">Date de Naissance</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-calendar"></i>
                                        </span>
                                        <input asp-for="BirthDate" class="form-control" type="date" />
                                    </div>
                                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                                </div>

                                <!-- Age Display -->
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Âge actuel: <strong>@Model.Age ans</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contact -->
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm hover-card">
                            <div class="card-header bg-white">
                                <h5 class="mb-0 text-warning">
                                    <i class="fas fa-address-book me-2"></i>Coordonnées
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- Phone -->
                                <div class="mb-3">
                                    <label asp-for="TelNumber" class="form-label required">Téléphone</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-phone"></i>
                                        </span>
                                        <input asp-for="TelNumber" class="form-control" />
                                    </div>
                                    <span asp-validation-for="TelNumber" class="text-danger"></span>
                                </div>

                                <!-- Email -->
                                <div class="mb-3">
                                    <label asp-for="EmailAddress" class="form-label required">Email</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-envelope"></i>
                                        </span>
                                        <input asp-for="EmailAddress" class="form-control" />
                                    </div>
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>

                                <!-- Tickets Summary -->
                                <div class="alert @(Model.Tickets.Any() ? "alert-success" : "alert-secondary") mb-0">
                                    <i class="fas fa-ticket-alt me-2"></i>
                                    <strong>@Model.Tickets.Count</strong> ticket(s) associé(s)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
        }

    .form-label {
        font-weight: 500;
        color: #495057;
    }

        .form-label.required::after {
            content: " *";
            color: #dc3545;
        }

    .input-group-text {
        background-color: #ffc107;
        color: white;
        border: none;
    }

    .form-control:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255,193,7,0.25);
    }

    .btn {
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        transition: all 0.2s;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Date de naissance maximale (18 ans minimum)
            var today = new Date();
            var maxDate = new Date(today.getFullYear() - 18, today.getMonth(), today.getDate());
            $('#BirthDate').attr('max', maxDate.toISOString().split('T')[0]);

            // Validation personnalisée
            $("#editPassengerForm").validate({
                rules: {
                    "TelNumber": {
                        required: true,
                        minlength: 8,
                        maxlength: 8,
                        digits: true
                    },
                    "EmailAddress": {
                        required: true,
                        email: true
                    }
                },
                messages: {
                    "TelNumber": {
                        required: "Le numéro de téléphone est obligatoire",
                        minlength: "Le numéro doit contenir 8 chiffres",
                        maxlength: "Le numéro doit contenir 8 chiffres",
                        digits: "Uniquement des chiffres"
                    },
                    "EmailAddress": {
                        required: "L'adresse email est obligatoire",
                        email: "Format d'email invalide"
                    }
                }
            });
        });
    </script>
}